<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- NUOVO: Aggiunto lo SplashFragment -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.greenmind.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <!-- NUOVO: Azione per navigare da Splash a Login -->
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- I tuoi fragment esistenti sono stati mantenuti e non modificati -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.greenmind.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_quizTestFragment"
            app:destination="@id/quizTestFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.greenmind.auth.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.greenmind.auth.ForgotPasswordFragment"
        android:label="ForgotPassword"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/quizTestFragment"
        android:name="com.example.greenmind.resource.quiz.QuizTestFragment"
        android:label="Quiz Test"
        tools:layout="@layout/fragment_quiz_test" />

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.greenmind.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_FirstFragment_to_quizTestFragment"
            app:destination="@id/quizTestFragment" />
    </fragment>
</navigation>