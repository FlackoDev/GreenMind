<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.GreenMind" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.GreenMind" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/green_primary</item>

    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/transparent</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/prova</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.GreenMind</item>
    </style>

    <!-- Stili per l'AppBar (richiesti dal nuovo activity_main.xml) -->
    <style name="Theme.GreenMind.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GreenMind.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>