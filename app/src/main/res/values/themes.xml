<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.GreenMind" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.GreenMind" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/prova</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.GreenMind</item>
        
        <!-- Queste impostazioni valgono SOLO durante la splash -->
        <item name="android:statusBarColor">@color/green_primary</item>
        <item name="android:navigationBarColor">@color/green_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.GreenMind.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GreenMind.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>